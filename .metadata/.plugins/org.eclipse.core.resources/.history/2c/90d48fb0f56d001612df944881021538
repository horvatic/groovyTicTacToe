package gameStatus
import gameValues.*

class CheckGame {
	def ticTacToeBoard
	CheckGame(ticTacToeBoard) {
		this.ticTacToeBoard = ticTacToeBoard
	}
	
	public CurrentGameStatus() {
		def gameStatus = RowVictory(BoardValue.X) 
						 ? VictoryValue.X : VictoryValue.ONGOING
		gameStatus
	}
	
	private RowVictory(boradValue, rowIndex) {
		this.ticTacToeBoard[rowIndex][0].is(boradValue) &&
		this.ticTacToeBoard[rowIndex][1].is(boradValue) &&
		this.ticTacToeBoard[rowIndex][2].is(boradValue)
	}
	
}
