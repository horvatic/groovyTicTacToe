package gameStatus
import gameValues.VictoryValue

class CheckGame {
	VictoryValue ticTacToeBoard
	CheckGame(ticTacToeBoard) {
		this.ticTacToeBoard = ticTacToeBoard
	}
	
	public CurrentGameStatus() {
		def gameStatus = RowVictory(VictoryValue.X) 
						 ? VictoryValue.X : VictoryValue.ONGOING
		gameStatus
	}
	
	private RowVictory(victoryValue) {
		//def temp = this.ticTacToeBoard[0][0]
		//def result = this.ticTacToeBoard[0][0].is(victoryValue)
		//result
		this.ticTacToeBoard[0][0] == VictoryValue.X
	}
	
}
